{
  "name": "clean-ai-backend",
  "version": "1.0.0",
  "description": "Clean NestJS backend for AI systemâ€¦",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/main.js",
    "start:heroku": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec ts-node src/main.ts",
    "build": "nest build",
    "heroku-postbuild": "npm run build && npm run init:db",
    "prestart": "echo Skipping build at runtime",
    "init:db": "node scripts/init-database.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d src/database/data-source.ts",
    "seed": "ts-node src/database/seeds/seed.ts"
  },
  "keywords": [
    "ai",
    "llm",
    "chatbot",
    "rag",
    "openai",
    "ollama",
    "performance-monitoring",
    "nestjs",
    "typescript",
    "typeorm",
    "angular-ready",
    "clean-architecture"
  ],
  "author": "Luca Cirillo",
  "license": "MIT",
  "dependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^10.4.19",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.4.19",
    "@nestjs/platform-express": "^10.4.19",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^5.2.0",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "2.0.2",
    "openai": "^4.67.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.8.3",
    "uuid": "^10.0.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.19",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.16.10",
    "@types/pdf-parse": "^1.1.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "multer": "2.0.2",
    "@nestjs/serve-static": "^4.0.2"
  }
}
